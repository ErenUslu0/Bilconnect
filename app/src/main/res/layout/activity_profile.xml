<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        android:text="@string/biography"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toEndOf="@+id/backButtonProfile"
        app:layout_constraintTop_toTopOf="@+id/backButtonProfile" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButtonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/app_color"
        android:clickable="true"
        android:contentDescription="backScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_navigate_before_24" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/app_color"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/textVievNameSurname"
        app:layout_constraintEnd_toStartOf="@+id/textVievNameSurname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textVievNameSurname" />

    <TextView
        android:id="@+id/textVievNameSurname"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="@string/name_surname"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextBiography"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61" />

    <EditText
        android:id="@+id/editTextBiography"
        android:layout_width="355dp"
        android:layout_height="161dp"
        android:background="@drawable/rounded_corner"
        android:gravity="top|left"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:focusable="false"
        android:text="I'm freshman at Bilkent University"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="74dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Rating :"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/editTextBiography"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="77dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:drawableRight="@drawable/baseline_star_rate_24"
        android:gravity="center"
        android:text="@string/ratingPoint"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <Button
        android:id="@+id/buttonLastAttendedEvent"
        android:layout_width="330dp"
        android:layout_height="57dp"
        android:text="Last Attended Events"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="Biography :"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextBiography"
        app:layout_constraintStart_toStartOf="@+id/editTextBiography" />


</androidx.constraintlayout.widget.ConstraintLayout>