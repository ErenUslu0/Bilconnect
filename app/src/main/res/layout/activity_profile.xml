<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:fontFamily="@font/sfnsbold"
        android:gravity="center_vertical"
        android:text="@string/biography"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toEndOf="@+id/backButtonProfile"
        app:layout_constraintTop_toTopOf="@+id/backButtonProfile" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButtonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/app_color"
        android:clickable="true"
        android:contentDescription="backScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_navigate_before_24" />

    <TextView
        android:id="@+id/textVievNameSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfnsbold"
        android:gravity="center"
        android:text="@string/name_surname"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextBiography"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/editTextBiography"
        android:layout_width="355dp"
        android:layout_height="161dp"
        android:background="@drawable/rounded_corner_az"
        android:focusable="false"
        android:gravity="top|left"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="I'm freshman at Bilkent University"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="74dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/sfns"
        android:gravity="center"
        android:text="Rating :"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/editTextBiography"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography" />

    <TextView
        android:id="@+id/textViewRating"
        android:layout_width="77dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:drawableRight="@drawable/baseline_star_rate_24"
        android:fontFamily="@font/sfns"
        android:gravity="center"
        android:text="@string/ratingPoint"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView10"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <Button
        android:id="@+id/buttonLastAttendedEvent"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:fontFamily="@font/sfnsbold"
        android:text="Last Attended Events"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography"
        app:layout_constraintVertical_bias="0.407" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/sfnsbold"
        android:text="Biography :"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextBiography"
        app:layout_constraintStart_toStartOf="@+id/editTextBiography" />

    <TextView
        android:id="@+id/textViewEditProfile"
        android:layout_width="102dp"
        android:layout_height="33dp"
        android:fontFamily="@font/sfnsbold"
        android:text="Edit Profile"
        android:textColor="@color/app_color"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/floatingActionButtonUsers"
        app:layout_constraintStart_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/sfns"
        android:text="Campus:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLastAttendedEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/campusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfns"
        android:text="Main"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/app_color"
        android:fontFamily="@font/sfnsbold"
        android:text="Log Out"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLastAttendedEvent"
        app:layout_constraintVertical_bias="0.378" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="users"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_person_24" />


</androidx.constraintlayout.widget.ConstraintLayout>