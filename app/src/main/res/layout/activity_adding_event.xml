<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="close"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/floatingActionButton2"
        android:layout_alignBottom="@+id/floatingActionButton2"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/floatingActionButton2"
        android:text="Create An Event"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/floatingActionButton2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            />

        <EditText
            android:id="@+id/editTextEventName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rounded_corner"
            android:hint="Volleyball"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Quota"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="24dp"
            />

        <EditText
            android:id="@+id/editTextQuota"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rounded_corner"
            android:hint="8"
            android:inputType="number"
            android:padding="8dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="24dp"
                android:text="Date"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="12dp"
                android:text="Event Time"
                android:textSize="20dp"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="110dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_corner"
                android:hint="28.05.2023"
                android:inputType="date"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editTextTime"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/rounded_corner"
                android:hint="12.25"
                android:inputType="time"
                android:padding="8dp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="18dp"
            android:text="Event Place" />

        <EditText
            android:id="@+id/editTextEventPlace"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rounded_corner"
            android:hint="Dormitories Sports Hall"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="18dp"
            android:text="Event Description" />

        <EditText
            android:id="@+id/editTextEventDesc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rounded_corner"
            android:hint="Wanna Play Volleyball For Fun"
            android:padding="8dp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Campus"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="East Campus"/>


            </RadioGroup>
        </LinearLayout>


        <Button
            android:id="@+id/createEventButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="Create"
            android:textSize="18dp"

            />

    </LinearLayout>
    
</RelativeLayout>