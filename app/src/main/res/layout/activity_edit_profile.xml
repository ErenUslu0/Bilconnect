<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".EditProfileActivity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:text="Edit Profile"
        android:textSize="24sp"
        android:fontFamily="@font/sfnsbold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/backButtonProfile1111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toEndOf="@+id/backButtonProfile1111"
        app:layout_constraintTop_toTopOf="@+id/backButtonProfile1111"
        app:layout_constraintVertical_bias="0.526" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backButtonProfile1111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/app_color"
        android:clickable="true"
        android:contentDescription="backScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_navigate_before_24" />


    <EditText
        android:id="@+id/editTextBiography1111"
        android:layout_width="355dp"
        android:layout_height="75dp"
        android:background="@drawable/rounded_corner_az"
        android:gravity="top|left"
        android:hint="Biography"
        android:paddingLeft="20dp"
        android:paddingTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corner_az"
        android:gravity="center|left"
        android:hint="Name Surname"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextBiography1111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameSurname"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/btnChangePassword"
        android:layout_width="187dp"
        android:layout_height="31dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/sfns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography1111" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="355dp"
        android:layout_height="57dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corner_az"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChangePasswordButton"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/textView121111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="Change Biography"
        android:textSize="20dp"
        android:fontFamily="@font/sfns"
        android:textColor="@color/black"

        app:layout_constraintBottom_toTopOf="@+id/editTextBiography1111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewNameSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/sfns"
        android:text="Change Name Surname"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView121111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.535" />

    <Button
        android:id="@+id/ChangePasswordButton"
        android:layout_width="355dp"
        android:layout_height="48dp"
        android:autofillHints="q"
        android:background="@drawable/rounded_corner_az"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="Send Password To My E-mail"
        app:layout_constraintBottom_toBottomOf="parent"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnChangePassword"
        app:layout_constraintVertical_bias="0.065" />


</androidx.constraintlayout.widget.ConstraintLayout>




