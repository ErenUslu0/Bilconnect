<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/app_color"
        android:contentDescription="AddingEvent"
        android:src="@drawable/baseline_add_24" />
    <SearchView
        android:id="@+id/search_bar"
        android:layout_toRightOf="@+id/btnAddEvent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/search_bar"
        android:contentDescription="ProfileButton"
        android:src="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/textViewLastCreatedEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last Created Events"
        android:layout_marginTop="24dp"
        android:paddingLeft="22dp"
        android:textSize="24sp"
        android:layout_below="@id/btnAddEvent"
        android:fontFamily="@font/helvetica"
        />
    <Button
        android:id="@+id/btnEvaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evaluation"
        android:layout_marginLeft="8dp"

        android:layout_below="@+id/textViewLastCreatedEvents"
        />
    <Button
        android:id="@+id/btnProfileMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/textViewLastCreatedEvents"
        android:layout_toRightOf="@id/btnEvaluation"
        />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Edit Profile"
        android:layout_below="@+id/textViewLastCreatedEvents"
        android:layout_toRightOf="@id/btnProfileMainActivity"
        />

</RelativeLayout>