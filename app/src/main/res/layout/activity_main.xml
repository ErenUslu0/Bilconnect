<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/app_color"
        android:contentDescription="AddingEvent"
        android:src="@drawable/baseline_add_24" />
    <SearchView
        android:id="@+id/search_bar"
        android:layout_toRightOf="@+id/btnAddEvent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:searchHintIcon="@null"
        android:queryHint="Search Event"
        android:background="@drawable/rounded_corner"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/search_bar"
        android:contentDescription="ProfileButton"
        android:foregroundGravity="center"
        android:src="@drawable/baseline_person_24" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddEvent"/>

</RelativeLayout>